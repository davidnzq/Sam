{
  "manifest_version": 3,
  "name": "longPort AI Pro",
  "version": "1.0.0",
  "description": "为 Notion 和 LongPort 文档平台提供 AI 辅助写作和文本优化功能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "records/records.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["test/test.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://notion.so/*",
        "*://*.notion.so/*",
        "*://longport.com/*",
        "*://*.longport.com/*",
        "*://longportapp.com/*",
        "*://*.longportapp.com/*"
      ],
      "js": ["content/index.js"],
      "css": ["content/content.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "*://notion.so/*",
    "*://*.notion.so/*",
    "*://longport.com/*",
    "*://*.longport.com/*",
    "*://longportapp.com/*",
    "*://*.longportapp.com/*"
  ],
  "commands": {
    "optimize-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "润色一下"
    }
  }
}
