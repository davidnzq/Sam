// APIé…ç½®éªŒè¯å‡½æ•°ï¼ˆç®€åŒ–ç‰ˆï¼‰
function validateAPIConfig(companyApiKey, companyApiUrl) {
  const validation = {
    isValid: true,
    companyValid: true,
    companyErrors: [],
    errors: []
  };
  
  // éªŒè¯å…¬å¸APIé…ç½®
  if (!companyApiKey || companyApiKey.trim() === '') {
    validation.companyValid = false;
    validation.companyErrors.push('APIå¯†é’¥æœªé…ç½®');
  } else if (companyApiKey.length < 10) {
    validation.companyValid = false;
    validation.companyErrors.push('APIå¯†é’¥é•¿åº¦å¼‚å¸¸');
  }
  
  if (!companyApiUrl || companyApiUrl.trim() === '') {
    validation.companyValid = false;
    validation.companyErrors.push('API URLæœªé…ç½®');
  } else if (!companyApiUrl.startsWith('http')) {
    validation.companyValid = false;
    validation.companyErrors.push('API URLæ ¼å¼ä¸æ­£ç¡®');
  }
  
  if (!validation.companyValid) {
    validation.errors.push(`å…¬å¸API: ${validation.companyErrors.join(', ')}`);
  }
  
  // æ€»ä½“éªŒè¯ç»“æœ
  validation.isValid = validation.companyValid;
  
  return validation;
}

