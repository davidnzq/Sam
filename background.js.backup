function cleanAPIResponse(response) {
  if (typeof response !== 'string') {
    return String(response);
  }
  
  // å¦‚æœå“åº”åŒ…å« HTML æ ‡ç­¾ï¼Œå°è¯•æå–çº¯æ–‡æœ¬
  if (response.includes('<') && response.includes('>')) {
