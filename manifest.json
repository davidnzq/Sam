{
  "manifest_version": 3,
  "name": "LongPort AI 助手",
  "version": "1.3.1",
  "description": "在 Notion 和 LongPort 文档中提供 AI 辅助协作功能，包括文本语法校验和优化",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "commands": {
    "optimize-selection": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "Alt+O"
      },
      "description": "优化选中文本"
    },
    "show-ai-popup": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "唤起 AI 助手弹窗"
    }
  },
  "host_permissions": [
    "https://*.notion.so/*",
    "https://*.notion.site/*",
    "https://*.notion.com/*",
    "https://*.longportapp.com/*",
    "https://lboneapi.longbridge-inc.com/*"
  ],
  "background": {
    "service_worker": "background-simple.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.notion.so/*",
        "https://*.notion.site/*",
        "https://*.notion.com/*",
        "https://*.longportapp.com/*"
      ],
      "js": ["content.js", "content-optimize.js", "content-optimize-handler.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "LongPort AI 助手"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css", "style-guide/*", "optimize-panel.html", "dist/optimize-panel.js"],
      "matches": [
        "https://*.notion.so/*",
        "https://*.notion.site/*",
        "https://*.notion.com/*",
        "https://*.longportapp.com/*"
      ]
    }
  ]
}
